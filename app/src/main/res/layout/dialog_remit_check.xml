<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mainWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_remit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="86dp"
            android:text="한성대 님\n국민은행 통장"
            android:textSize="20sp"
            android:textColor="@color/mainBlack"
            android:lineHeight="30dp"
            android:fontFamily="@font/nanum_gothic_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_remit_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:lineHeight="30dp"
            android:text="10,000 원"
            android:textColor="@color/mainBlack"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/tv_remit_info"
            app:layout_constraintTop_toBottomOf="@+id/tv_remit_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_remit_money"
            android:text="송금하시겠습니까?"
            app:layout_constraintStart_toStartOf="@+id/tv_remit_money"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textColor="@color/mainBlack"
            android:textSize="20dp"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bottom_logo"
            android:layout_width="218dp"
            android:layout_height="250dp"
            android:layout_marginEnd="-20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/logo_screen_bottom_right" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>